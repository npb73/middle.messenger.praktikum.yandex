{
  "name": "yandex_messanger",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "tsc --noEmit",
    "build": "npm run prebuild && vite build",
    "preview": "vite preview",
    "build-css": "sass -w --load-path=node_modules src:dist --style=compressed",
    "start": "npm install && vite build && node server.js",
    "lint": "eslint .",
    "stylelint": "stylelint \"**/*.sass\"",
    "test": "mocha --require ignore-styles",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "chai": "^5.1.0",
    "eslint": "^8.53.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "ignore-styles": "^5.0.1",
    "mocha": "^10.4.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-scss": "^5.3.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "css-modules-require-hook": "^4.2.3",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "jsdom": "^24.0.0",
    "nanoid": "^5.0.3",
    "node-sass": "^9.0.0",
    "path": "^0.12.7",
    "sass": "^1.72.0",
    "sass-loader": "^13.3.2",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint && npm run test"
    }
  }
}
